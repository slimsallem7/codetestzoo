<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.zoostudio.android.image.SmartImageView
        android:id="@+id/imageAvatarProfile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/img_userprofileavatar_background" />

    <TextView
        android:id="@id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageAvatarProfile"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAdress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_username"
        android:layout_below="@id/txt_username"
        android:text="@string/content_description"
        android:textColor="@color/NgonDoGrey"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/radioGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAvatarProfile"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/checkin_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_btn_detail_checkin"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/testnumber"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/like_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_btn_detail_like"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/testnumber"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/comment_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_btn_detail_wishlist"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/testnumber"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/friend_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/ic_btn_detail_friends"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/testnumber"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>